<%# views/index.ejs %>

<% extend('layout') %>

<div id="app">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1>Google Cloud Storage</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <form role="form" enctype="multipart/form-data" method="POST" action="/upload/image">
                    <div class="form-group"><input class="form-control-file" id="exampleInputFile" type="file" name="image" multiple="multiple" /></div><button class="btn btn-primary" type="submit">Submit</button></form>
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Bucket Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr @click="getMeta(item)" v-for="(item, index) in fileList">
                            <td>{{item.name}}</td>
                            <td>{{item.bucket.name}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-4">
                <div class="jumbotron">
                    <img v-bind:src="target.link" alt="" style="margin-bottom: 20px;">
                    <br>
                    <strong>{{ target.name }}</strong>
                    <br>
                    <table class="table" style="margin-top: 20px;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>描述</th>
                                <th>分數</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="(item, index) in target.feature">
                                <td>{{index}}</td>
                                <td>{{item.description}}</td>
                                <td>{{item.score}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



